<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/bacg"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >
                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/backicon"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"

                    />


                <TextView
                    android:id="@+id/marqueetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="‘এভাবে আল্লাহ তোমাদের মধ্যকার ইমানদার জেনে নেন এবং তোমাদের মধ্য থেকে কিছু লোককে শহীদ হিসেবে গ্রহণ করতে চান’ (আল–ইমরান, ১৪০)।"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:padding="2dp"
                    android:marqueeRepeatLimit="marquee_forever"
                    />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="20dp"
            app:cardElevation="7.5dp"
            app:cardMaxElevation="7.5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                                <ImageView
                                    android:id="@+id/image"
                                    android:layout_width="match_parent"
                                    android:layout_height="330dp"
                                    android:src="@drawable/abusayed"
                                    android:scaleType="centerCrop"
                                    />
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Abu Sayed abu sayed"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/occupation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Student"
                                    android:textSize="24sp"
                                    android:paddingTop="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/institute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    android:text="Employee of a Chair Shop in Sholoshohor, Chattogram"
                                    android:textSize="22sp"
                                    android:textColor="@color/black"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="5dp"
                                    >
                                        <TextView
                                            android:id="@+id/deathdate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Death: "
                                            android:textSize="20sp"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="8dp"
                                            android:textStyle="bold"
                                            android:paddingBottom="5dp"
                                            android:paddingTop="2dp"
                                            android:textColor="#FF0000"
                                            />
                                        <TextView
                                            android:id="@+id/age"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" Age: "
                                            android:textSize="20sp"
                                            android:paddingRight="8dp"
                                            android:textStyle="bold"
                                            android:paddingBottom="5dp"
                                            android:paddingTop="2dp"
                                            android:textColor="#000000"
                                            />


                                </LinearLayout>
                                <TextView
                                    android:id="@+id/placeofbirth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Place of birth: "
                                    android:textSize="22sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="How he/she became a MARTYR : "
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="5dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/howdies"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="17sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Short biography : "
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="5dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/biography"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="17sp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="15dp"
                                    />


                                <Button
                                    android:id="@+id/submitbtn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Submit MARTYRS information"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="#F30D0D"
                                    android:layout_marginBottom="15dp"
                                    />

                        </LinearLayout>

                </ScrollView>

        </androidx.cardview.widget.CardView>

</LinearLayout>